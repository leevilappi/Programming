package o1.auctionhouse

import scala.collection.mutable.Buffer

class AuctionHouse(val name: String) {
  
  private var contains = Buffer[ItemForSale]()
  
  def addItem(item: ItemForSale): Unit = {
    contains += item
  }
  
  def averagePrice: Double = {
    var totalPrice: Int = 0
    for(item <- 0 to contains.size){
      totalPrice += contains(item).price
    }
    1.00 * totalPrice / contains.size
  }
  
  def nextDay(): Unit 
  
  def numberOfOpenItems: Int
  
  def priciest: Option[ItemForSale]
  
  def purchasesOf(buyer: String): Buffer[ItemForSale] {
    
    var list = Buffer[ItemForSale]()
    
    for(item <- 0 to contains.size){
      if(item.buyer == buyer){
        list += item        
      }
    }
  }
  
  def removeItem(item: ItemForSale): Unit
  
  def toString: String 
  
  def totalPrice: Int 
}