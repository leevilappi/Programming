package o1.auctionhouse


class InstantPurchase(description: String) extends ItemForSale(description: String) {
  
  // Classes own methods
  
  def buyer: Option[String]  = {
    if(!this.isExpired){
      None
    }else{
      this.buyer
    }
  }
  
  def buy(buyer: String): Boolean = {
    if (!this.isExpired && this.isOpen){
      true
    } else {
      false
    }
   
  }
  
  def isOpen: Boolean = {
    if (!this.isExpired && this.buyer.isEmpty){
      true
    } else {
      false
    }
  }
  
  def price: Int
  
  
  override def toString: String = this.description

  
}