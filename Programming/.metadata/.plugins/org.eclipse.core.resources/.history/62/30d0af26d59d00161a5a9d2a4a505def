package o1.auctionhouse


abstract class InstantPurchase(description: String) extends ItemForSale(description: String) {
  
  // Classes own methods
  
  def buyer: Option[String]  = this.buyerName
  
  def buy(buyer: String): Boolean = {
    if (!this.isExpired && this.isOpen){
      true
    } else {
      false
    }
   
  }
  
  def isOpen: Boolean = {
    if (!this.isExpired && this.buyer.isEmpty){
      true
    } else {
      false
    }
  }
  
  
  
}