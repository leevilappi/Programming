package o1.train

object TrainSittingCarTest extends App{
  
  val SC = new SittingCar(10, 6)
  
  val places = "abcdef"
  
  println("Number of places: " + SC.numberOfPlaces)
  println("Number of free places: " + SC.numberOfFreePlaces)
  println("Fullness: " + SC.fullness)

  println("Reserve single places")
  println("Seat 6A: " + SC.reservePlace(6, places(0)))
  println("Seat 6A: " + SC.reservePlace(6, places(0)) + ", same as above")
  
  for(i <- 1 to 9){
    for(j <- 0 to 5){
      println("Reserving seat: " + i + places(j).toString.toUpperCase + ", succeeded: " + SC.reservePlace(i, places(j)))
    }
  }
  
  println("\n" + "Number of free places: " + SC.numberOfFreePlaces)
  
  println("\n" + "Reserve multiple places")
  println("Try to reserve 10 places: " + SC.reservePlaces(10))
  println("Try to reserve 5 places: " + SC.reservePlaces(5))
  println("Try to reserve 7 places: " + SC.reservePlaces(7))
  

  println("\n" + "Fullness:" + SC.fullness)
  println("Number of free places: " + SC.numberOfFreePlaces)
  
  
}